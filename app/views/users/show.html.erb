<%= stylesheet_link_tag 'user_show' %>

<h1>Here is a list of posts for a given user</h1>
<% user = User.find(params[:id])%>
<%= render "shared/userblock", user: user %>
<div class="bio-box">
  <span>Bio</span>
  <p><%= user.bio %></p>
</div>
<div class="posts-box">
  <% if user.last_three_posts.empty? %>
    <%= "#{user.name} has no post yet!" %>
  <%else%>
    <% user.last_three_posts.each_with_index do |post, index| %>
        <span>Post #<%= index + 1 %></span>
        <p><%= post.text %></p>
    <%end%>
  <%end%>
</div>
<%= link_to user_posts_path(params[:id]), class: "posts-btn" do %>
    <%= "See all posts"%>
<% end %>